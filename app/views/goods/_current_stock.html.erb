<table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Source</th>
      <th scope="col">Destination</th>
      <th scope="col">Consignment</th>
      <th scope="col">Entry At</th>
    </tr>
  </thead>
  <tbody>
    <% @goods.each do |good| %>
      <% if good.exit_at == nil %>
    <tr>
      <td><%= good.name %></td>
      <td><%= good.category %></td>
      <td><%= good.source %></td>
      <td><%= good.destination %></td>
      <td><%= good.consignment %></td>
      <td><%= good.entry_at %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
