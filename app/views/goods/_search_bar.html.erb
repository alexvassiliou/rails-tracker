<div class="search-field">
  <%= form_tag goods_path, method: :get do %>
    <%= hidden_field_tag :direction, params[:direction] %>
    <%= hidden_field_tag :sort, params[:sort] %>
    <%= text_field_tag :search,
    params[:search],
    class: "form-control",
    id: "search-bar",
    placeholder: "search by category or consignment"
    %>
  <%end%>
</div>
